			<input type="text" name="pix_customerPhone" id="ifthenpay_pix_customerPhone" class="form-control" value="{{ customerPhone }}">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerAddress">{{ entry_pix_address }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerAddress" id="ifthenpay_pix_customerAddress" class="form-control" value="{{ customerAddress }}">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerStreetNumber">{{ entry_pix_streetnumber }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerStreetNumber" id="ifthenpay_pix_customerStreetNumber" class="form-control">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerCity">{{ entry_pix_city }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerCity" id="ifthenpay_pix_customerCity" class="form-control" value="{{ customerCity }}">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerZipCode">{{ entry_pix_zipcode }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerZipCode" id="ifthenpay_pix_customerZipCode" class="form-control">
			<div class="ifthenpay_error_message text-danger"></div>
