	<div class="form-group required">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerName">{{ entry_pix_name }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerName" id="ifthenpay_pix_customerName" class="form-control" value="{{ customerName }}">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group required">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerCpf">{{ entry_pix_cpf }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerCpf" id="ifthenpay_pix_customerCpf" class="form-control">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	<div class="form-group required">
		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerEmail">{{ entry_pix_email }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerEmail" id="ifthenpay_pix_customerEmail" class="form-control" value="{{ customerEmail }}">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>

	{# separator #}

	<div class="row bootstrap iftp_separator">
		<hr class=""/>
