		<label class="col-sm-2 control-label" for="ifthenpay_pix_customerState">{{ entry_pix_state }}</label>
		<div class="col-sm-10">
			<input type="text" name="pix_customerState" id="ifthenpay_pix_customerState" class="form-control">
			<div class="ifthenpay_error_message text-danger"></div>
		</div>
	</div>


</form>


<div class="buttons">
	<div class="pull-right">
		<input type="button" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary"/>
	</div>
</div>

<link href="{{pixStyle}}" rel="stylesheet" type="text/css">
