<div class="form-group">
    <label class="col-sm-2 control-label" for="ifthenpayCCardKey">{{ entry_ccard_ccardKey }}</label>
    <div class="col-sm-10">
        <select name="payment_ifthenpay_ccard_ccardKey" id="ifthenpayCCardKey" class="form-control">
        {% if ccard_ccardKeys %}
            {% for ccard_ccardKey in ccard_ccardKeys %}
                <option value="{{ ccard_ccardKey.value }}">{{ ccard_ccardKey.value }}</option>
            {% endfor %}
        {% else %}
            <option value="{{ payment_ifthenpay_ccard_ccardKey }}" selected="selected">{{ payment_ifthenpay_ccard_ccardKey }}</option>
        {% endif %}
        </select>
    </div>
</div>
{% if not ccard_ccardKeys %}
    {{ifthenpay_chooseNewEntidadeBtn}}
{% endif %}
<div class="form-group">
    <label class="col-sm-2 control-label" for="input_order_status_canceled">{{ entry_order_status_canceled }}</label>
    <div class="col-sm-10">
    <select name="{{ "payment_ifthenpay_ccard_order_status_canceled_id" }}" id="input_order_status_canceled" class="form-control">
        {% for order_status in order_statuses %}
        {% if order_status.order_status_id == payment_ifthenpay_ccard_order_status_canceled_id %}
        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
        {% else %}
        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
        {% endif %}
        {% endfor %}
    </select>
    </div>
</div>
