{% if is_to_display_in_admin %}
	<div class="col-12 p-3 border border-secondary-subtle rounded "> <div class="pt-2 pb-3"><img src="{{ payment_method_icon }}" alt="Ifthenpay Gateway" title="Ifthenpay Gateway"/></div> <table class="table border border-secondary-subtle rounded"> <tbody> <tr> <td>{{text_payment_url}}</td> <td class="fw-bold"> <a class="btn btn-primary" target="_blank" href="{{payment_url}}">{{text_goto_gateway_btn}}</a> </td> </tr> {% if deadline %} <tr> <td>{{text_deadline}}</td> <td class="fw-bold">{{deadline}}</td> </tr> {% endif %} <tr> <td>{{text_total_to_pay}}</td> <td class="fw-bold">{{total}}</td> </tr> </tbody> </table> <p class="text-center mb-0">{{text_processed_by_ifthenpay}}</p> </div>
{% else %}
	<div class="col-sm-12 col-md-4 p-3 border border-secondary-subtle rounded .container, .container-sm, .container-md">
		<h5 class="fw-bold">{{text_pay_by_method}}</h5>
		<div class="pt-2 pb-3">
			<img src="{{ payment_method_icon }}" alt="Ifthenpay Gateway" title="Ifthenpay Gateway"/>
		</div>
		<table class="table border border-secondary-subtle rounded">
			<tbody>
			{% if not is_paid %}
				<tr>
					<td>{{text_payment_url}}</td>
					<td class="fw-bold">
						<a class="btn btn-primary" target="_blank" href="{{payment_url}}">{{text_goto_gateway_btn}}</a>
					</td>
				</tr>
				{% if deadline %}
					<tr>
						<td>{{text_deadline}}</td>
						<td class="fw-bold">{{deadline}}</td>
					</tr>
				{% endif %}
			{% endif %}
				<tr>
					<td>{{text_total_to_pay}}</td>
					<td class="fw-bold">{{total}}</td>
				</tr>
			</tbody>
		</table>
		<p class="text-center mb-0">{{text_processed_by_ifthenpay}}</p>
	</div>
{% endif %}
